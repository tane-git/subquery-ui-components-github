    "@storybook/testing-library": "^0.0.9",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "babel-loader": "^8.2.3",
    "eslint": "^8.10.0",
    "eslint-plugin-react": "^7.29.2",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "2.5.1"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
